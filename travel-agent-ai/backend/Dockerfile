FROM python:3.11-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1     PYTHONUNBUFFERED=1     PIP_NO_CACHE_DIR=1     PORT=8000

COPY travel-agent-ai/backend/requirements.txt /app/requirements.txt

RUN apt-get update && apt-get install -y --no-install-recommends build-essential     && pip install --no-cache-dir -r /app/requirements.txt     && apt-get purge -y --auto-remove build-essential     && rm -rf /var/lib/apt/lists/*

COPY travel-agent-ai/backend/app /app/app

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
